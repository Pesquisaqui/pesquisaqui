<p id="notice"><%= notice %></p>

<h1>Users</h1>
<%= link_to "Change your password", edit_user_registration_path %>


<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.email %></td>
        <td><%= user.topics.to_json %></td>
        <td><%= link_to 'Mostrar', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
